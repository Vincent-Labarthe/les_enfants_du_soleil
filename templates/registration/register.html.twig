{% extends 'base_login.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="login-container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1>Cr√©er un compte</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{'attr': {'class': 'custom-input'}}) }}
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'custom-input'}}) }}
        {{ form_row(registrationForm.submit, {'attr': {'class': 'custom-btn'}}) }}
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
