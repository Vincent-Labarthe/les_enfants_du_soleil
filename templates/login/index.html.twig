{% extends 'base_login.html.twig' %}

{% block body %}
    <div class="login-container">
        helolllo
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post" class="d-flex flex-column">
            <input class="custom-input" type="email" id="username" name="_username" value="{{ last_username }}"
                   placeholder="E-mail"/>
            <input class="custom-input mt-4" type="password" id="password" name="_password" placeholder="Mot de pass"/>
            <input type="hidden" name="{{ path('app_home') }}"/>
            <button class="custom-btn mt-4" type="submit">Se connecter</button>
        </form>
        <a class="custom-link mt-4" href="{{ path('app_register') }}">Cr√©er un compte</a>
    </div>

{% endblock %}