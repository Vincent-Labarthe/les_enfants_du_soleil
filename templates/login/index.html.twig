{% extends 'base_login.html.twig' %}

{% block body %}
    <div class="di-login-page">
        <div class="login-box">
            <div class="login-card-left">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h3 style="color: #B63A1F; font-weight: 500">{% trans %}Connexion{% endtrans %}</h3>
                <form action="{{ path('app_login') }}" method="post" class="d-flex flex-column mt-3 mb-4">
                    <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}"
                           placeholder="E-mail"/>
                    <input class="form-control mt-4" type="password" id="password" name="_password" placeholder="Mot de pass"/>
                    <input type="hidden" name="{{ path('app_home') }}"/>
                    <button class="btn btn-login mt-4" type="submit">Se connecter</button>
                </form>
                <a href="" style="font-size: 0.8rem;color: #B63A1F">J'ai oublié mon mot de passe</a>

            </div>
            <div class="login-card-right">
                <img src="{{ asset('/images/logo.png') }}" alt="" width="50%">
                <a class="custom-link mt-5" href="https://eds-madagascar.org/" style="color: #B63A1F">Découvrir les Enfants du Soleil</a>
            </div>
        </div>
    </div>

{% endblock %}