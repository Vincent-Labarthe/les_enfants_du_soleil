<div class="table-design" id="localisation_table">
    {% if familyRelations is null %}
        <p>Aucune relation familiale trouv√©.</p>
        <button class="btn btn-outline-primary"
                onclick="ajaxCall('app_beneficiary_family_add_ajax', {'id': {{ beneficiary.id }}})">Ajouter une relation familiale
        </button>
    {% else %}
        <h4 class="mb-4">Relations familiales</h4>
        <button class="btn btn-outline-primary mb-4"
                onclick="ajaxCall('app_beneficiary_family_add_ajax', {'id': {{ beneficiary.id }}})">Ajouter une relation familiale
        </button>
        <table class="table datagrid">
            <thead id="table_head">
            <tr class="table100-head">
                <th class="header-for-field-text text-left" dir="ltr">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        Relation
                    </div>
                </th>
                <th scope="col" class="cell" id="date_cell">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        Nom
                    </div>
                </th>
                <th scope="col" class="cell" id="cancel_cell">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        Niveau scolaire
                    </div>
                </th>
                <th scope="col" class="cell" id="cancel_cell">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        Profession
                    </div>
                </th>
                <th scope="col" class="cell" id="cancel_cell">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        Action
                    </div>
                </th>
            </tr>
            </thead>
            <tbody class="table_data">
            {% for familyRelation in familyRelations %}
                <tr class="text-center" id="{{ familyRelation.id }}">
                    <td>{{ familyRelation.relation }}</td>
                    <td>{{familyRelation.firstName ~ ' ' ~  familyRelation.lastName}}</td>
                    <td>{{ familyRelation.schoolLevel }}</td>
                    <td>{{ familyRelation.job }}</td>
                    <td class="actions actions-as-dropdown">
                        <div class="dropdown dropdown-actions">
                            <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" height="21" width="21" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path>
                                </svg>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item action-edit" data-action-name="modifier" id="localisation_edit_link_{{ familyRelation.id }}">Modifier</a>
                                <a class="dropdown-item action-delete text-danger"
                                   onclick="ajaxCallDelete('app_beneficiary_family_delete_ajax', {'id': {{ beneficiary.id }}, 'familyRelationId': {{ familyRelation.id }}})">Supprimer</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
