{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex flex-row hero-background">
        {% include 'beneficiary/_include/_sidebar_beneficiary.html.twig' %}
        <div class="container hero-container mt-5">
            <h2 class="ms-5 mt-5">{{ person.firstname ~ ' ' ~ person.lastname }} -
                <button type="button" class="btn"
                        style="{% if person.sexe is same as ('H')%}background-color:#0dcaf0
                        {% else %}background-color:#ffa5f5{% endif %}">{{ person.sexe }}
                </button>
            </h2>
            <p class="ms-5">Identifiant général n° {{ person.generalIdentifier.id }} </p>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary mb-5 text-end">Créer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        const user_id = {{ person.id }};
    </script>
    <script src="{{ asset('js/beneficiary.js') }}">
    </script>
{% endblock %}

